<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dip_10"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_country"
            android:layout_width="@dimen/dip_25"
            android:layout_height="@dimen/dip_25"
            android:layout_marginTop="@dimen/dip_5"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/dip_2"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_10"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.catviet.android.translation.utils.customview.TextViewLight
                        android:id="@+id/tvText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dip_10"
                        android:layout_marginTop="@dimen/dip_10"
                        android:layout_weight="6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dip_15"
                        android:paddingRight="@dimen/dip_15"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/ts_14" />

                    <ImageView
                        android:id="@+id/bt_speak"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/icon_speak" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_20"
        android:id="@+id/pro_loading"
        android:layout_marginTop="@dimen/dip_10"/>
    <LinearLayout
        android:id="@+id/layout_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_country_translate"
            android:layout_width="@dimen/dip_25"
            android:layout_height="@dimen/dip_25"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/dip_2"
            android:layout_marginTop="@dimen/dip_5"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_10"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/blue_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.catviet.android.translation.utils.customview.TextViewLight
                        android:id="@+id/tvTextTranslate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dip_10"
                        android:layout_marginTop="@dimen/dip_10"
                        android:layout_weight="6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dip_15"
                        android:paddingRight="@dimen/dip_15"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/ts_14" />

                    <ImageView
                        android:id="@+id/bt_speak_translate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_speak_white" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>