<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.catviet.android.translation.screen.voice.VoiceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toolbar"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip_20"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:orientation="horizontal">

                    <com.catviet.android.translation.utils.customview.TextViewRegular
                        android:id="@+id/tv_language_detect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="Auto Detect"
                        android:textAllCaps="true"
                        android:textColor="@color/blue_4"
                        android:textSize="@dimen/ts_14"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_choose_detect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:src="@drawable/ic_down" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_change" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:orientation="horizontal">

                    <com.catviet.android.translation.utils.customview.TextViewRegular
                        android:id="@+id/tv_language_translate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="Auto Detect"
                        android:textAllCaps="true"
                        android:textColor="@color/blue_4"
                        android:textSize="@dimen/ts_14"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_choose_translate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:src="@drawable/ic_down" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_voice"
            android:layout_marginBottom="@dimen/dip_65"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:layout_marginBottom="@dimen/dip_10"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_50"
                app:backgroundTint="@color/blue_4"
                android:src="@drawable/ic_voice_white"
                android:id="@+id/bt_voice_detect"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_50"
                app:backgroundTint="@color/tela_8"
                android:src="@drawable/ic_voice_white"
                android:id="@+id/bt_voice_translate"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
